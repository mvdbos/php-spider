{
    "name": "vdb/php-spider",
    "type": "application",
    "description": "A configurable and extensible PHP web spider",
    "keywords": ["spider", "crawler", "scraper"],
    "license": "MIT",
    "authors": [
        {
            "name": "Matthijs van den Bos"
        }
    ],
    "support": {
        "issues": "https://github.com/matthijsvandenbos/php-spider/issues",
        "source": "https://github.com/matthijsvandenbos/php-spider"
    },
    "require": {
        "php": ">=8.0",
        "ext-dom": "*",
        "ext-pcntl": "*",
        "guzzlehttp/guzzle": "^6.0.0||^7.0.0",
        "symfony/css-selector": "^3.0.0||^4.0.0||^5.0.0||^6.0||^7.0||^8.0",
        "symfony/dom-crawler": "^3.0.0||^4.0.0||^5.0.0||^6.0||^7.0||^8.0",
        "symfony/finder": "^3.0.0||^4.0.0||^5.0.0||^6.0||^7.0||^8.0",
        "symfony/event-dispatcher": "^4.0.0||^5.0.0||^6.0||^7.0||^8.0",
        "vdb/uri": "^0.3.2",
        "spatie/robots-txt": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0.0",
        "squizlabs/php_codesniffer": "^4.0.0",
        "pdepend/pdepend": "^2.16.1",
        "phan/phan": "^4.0||^5.0||^6.0",
        "phpmd/phpmd": "^2.0.0",
        "friendsofphp/php-cs-fixer": "^3.69.0"
    },
    "autoload": {
        "psr-4": {
            "VDB\\Spider\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VDB\\Spider\\Tests\\": "tests/"
        }
    }
}
